<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="textColor" format="enum">
        <enum name="primaryDark" value="0" />
        <enum name="primaryOnTheme" value="1" />
        <enum name="secondaryOnTheme" value="2" />
        <enum name="tertiaryOnTheme" value="3" />
    </attr>

    <attr name="textSize" format="enum">
        <enum name="primary" value="0" />
        <enum name="secondary" value="1" />
        <enum name="tertiary" value="2" />
        <enum name="toolbar" value="3" />
        <enum name="dialog" value="4" />
        <enum name="emoji" value="5" />
    </attr>

    <attr name="textStyle" format="enum">
        <enum name="regular" value="0" />
        <enum name="medium" value="1" />
        <enum name="semiBold" value="2" />
        <enum name="bold" value="3" />
    </attr>

    <declare-styleable name="CustomTextView">
        <attr name="textColor" />
        <attr name="textSize" />
        <attr name="textStyle" />
    </declare-styleable>

    <declare-styleable name="CustomEditText">
        <attr name="textColor" />
        <attr name="textSize" />
        <attr name="textStyle" />
    </declare-styleable>

    <declare-styleable name="PasswordEditText">
        <attr name="hint" format="string" />
    </declare-styleable>


</resources>